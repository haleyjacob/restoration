     plotOutput("barplot")
)

server <- function(input, output) {
  
  output$barplot <- renderPlot({
    ggplot(data = Sample_Data,aes_string(input$x,input$y, fill = "Species")) +
      geom_bar(stat="identity")    
  })
}

shinyApp(ui = ui, server = server)
